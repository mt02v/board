<h1>Hello ruby<h1>

<div class="bntton-container">
<%= link_to "新しい投稿", new_post_path, class:"link-botton" %>
</div>

<ul>
<% @posts.each do |post|%>
<li>
<h2><%= post.title %></h2>
<p><%= post.content %></p>
<span><%= post.created_at %></span>
<%= link_to "編集", edit_post_path(post), class:"link-button" %>
<%= button_to "削除", post_path(post), method: :delete, class: "link-delete-button" %>
</div>
</li>
<% end %>
</ul>